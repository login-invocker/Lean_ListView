<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_application_add_img"
    tools:context=".Click_Invocker">
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/snp_language"
        android:layout_alignParentRight="true"/>
    <Button
        android:id="@+id/btn_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ranking"
        android:onClick="rank" />
    <TextView
        android:id="@+id/txt_rank_user"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#ffffff"
        android:text="@string/highest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_rank" />

    <Button
        android:id="@+id/btnplay"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_play"
        android:onClick="Invocker" />

    <TextView
        style="@style/BigText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnplay"
        android:layout_centerInParent="true"
        android:fontFamily="cursive"
        android:text="@string/play" />

    <Button
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_toLeftOf="@+id/btnplay"
        android:background="@drawable/ic_share"
        android:onClick="chiase" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_toRightOf="@id/btnplay"
        android:background="@drawable/ic_rate"
        android:onClick="rate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_toLeftOf="@+id/btnplay"
        android:fontFamily="cursive"
        android:text="@string/Share"
        android:textColor="#ffffff"
        android:textSize="@dimen/_25sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_toRightOf="@id/btnplay"
        android:fontFamily="cursive"
        android:text="@string/rate"
        android:textColor="#ffffff"
        android:textSize="@dimen/_25sdp" />

</RelativeLayout>